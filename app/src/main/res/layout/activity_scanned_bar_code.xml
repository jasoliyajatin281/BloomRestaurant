<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        tools:context=".ScannedBarCode">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:background="@color/colorPrimaryLight">

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Guest Name:"
                          android:padding="10dp"
                          android:textSize="16dp"
                          android:textStyle="bold"
                          android:id="@+id/scanned_name"
                          android:textColor="@android:color/black"
                          android:fontFamily="sans-serif-condensed-medium"/>
                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:text="Total Points:"
                          android:id="@+id/scanned_points"
                          android:padding="10dp"
                          android:textSize="16dp"
                          android:textStyle="bold"
                          android:textColor="@android:color/black"
                          android:fontFamily="sans-serif-condensed-medium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Select Option:"
        android:layout_margin="10dp"/>

        <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Points"
                    android:drawableTop="@drawable/ic_card"
                    android:padding="20dp"
                    android:id="@+id/add_points"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Redeem Points"
                    android:drawableTop="@drawable/ic_card"
                    android:padding="20dp"
                    android:id="@+id/redeem_points"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:background="@android:color/transparent"
                    android:layout_margin="5dp"
            />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                app:cardCornerRadius="10dp">
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textColor="@android:color/white"
                    android:padding="20dp"
                    android:id="@+id/scannedcard_done_button"
                    android:textSize="18dp"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:background="@color/colorPrimary"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>