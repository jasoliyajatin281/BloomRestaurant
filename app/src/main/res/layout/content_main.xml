<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/content_main"
        tools:context=".MainActivity"
        android:background="@color/colorPrimaryLight"
        android:fitsSystemWindows="true">

    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorPrimaryLight">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/imageview"
                android:tint="#6F000000"
                android:alpha="0.9"
                android:src="@drawable/background"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="-36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/imageview">

            <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Scan Card"
                        android:drawableTop="@drawable/ic_card"
                        android:padding="20dp"
                        android:textSize="18dp"
                        android:id="@+id/scancard"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:background="@android:color/transparent"
                        android:layout_margin="5dp"
                />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp">
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Orders"
                        android:drawableTop="@drawable/ic_orders"
                        android:padding="20dp"
                        android:id="@+id/orders_button"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:background="@android:color/transparent"
                        android:layout_margin="5dp"
                />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp">
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Manage Reservations"
                        android:drawableTop="@drawable/ic_reservation"
                        android:padding="20dp"
                        android:id="@+id/reservation_button"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:background="@android:color/transparent"
                        android:layout_margin="5dp"
                />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="10dp">
                <Button
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Push Notifications"
                        android:drawableTop="@drawable/ic_notification"
                        android:padding="20dp"
                        android:textSize="18dp"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:background="@android:color/transparent"
                        android:layout_margin="5dp"
                />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>